@model HomeIndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<partial name="_Presentacion" />

<partial name="_Habilidades" />

@if (Model.Proyectos is not null){
    <div class="text-center" style="padding-top: 6rem;">
        <h1>Mis proyectos</h1>
        <p>Aquí puedes ver algunos de mis trabajos más recientes</p>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model.Proyectos)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="imagen proyecto">
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>
                        </div>
                        <div class="card-footer">
                            <a href="@proyecto.Link" class="btn btn-primary" target="_blank" rel="noreferrer">Visitar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}